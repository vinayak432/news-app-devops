pipeline {
    agent any

    stages {
        stage('checkout') {
            steps {
                sh "rm -rf news-app-devops"
              sh  "git clone https://github.com/vikas0105/news-app-devops"
            }
        }
         stage('Build') {
            steps {
                sh "mvn clean package"      
            }
        }
 stage('Test') {
            steps {
                sh "mvn test"      
            }
        }
// stage('source') {
  //          steps {
    //            sh ""      
      //      }
        //}
 stage('Deploy tomcat') {
            steps {
                sh "sudo cp target/news-app.war /opt/tomcat10/webapps/"      
            }
        }
    }
}
